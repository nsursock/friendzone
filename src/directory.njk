  <div class="flex md:h-screen overflow-hidden mt-px" x-data="dataDirectory()">
    <div class="flex min-w-0 flex-1 flex-col overflow-hidden">
      <div class="lg:hidden">
        <div class="flex items-center justify-between border-b border-gray-200 bg-gray-50 px-4 py-1.5"></div>
      </div>
      <div class="relative z-0 flex flex-1 overflow-hidden">
        <main class="relative z-0 flex-1 overflow-y-auto focus:outline-none sm:order-last">
          <!-- Breadcrumb -->
          <nav x-show="isMobile() && showProfile || !isMobile()" class="flex items-start px-4 py-3 sm:px-6 lg:px-8 md:hidden" aria-label="Breadcrumb">
            <button @click="showListing = true; showProfile = false" class="inline-flex items-center space-x-3 text-sm font-medium text-gray-900">
              <!-- Heroicon name: mini/chevron-left -->
              <svg class="-ml-2 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd"/>
              </svg>
              <span>Directory</span>
            </button>
          </nav>

          <article :class="isFetching && 'blur-lg animate-pulse'" x-show="isMobile() && showProfile || !isMobile()">
            <!-- Profile header -->
            <div>
              <template x-if="!selected.cover_url">
                <div>
                  <img class="h-32 w-full object-cover lg:h-48" src="https://images.unsplash.com/photo-1531685250784-7569952593d2?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1920&h=1280&q=80" alt="">
                </div>
              </template>
              <template x-if="selected.cover_url">
                <div>
                  <img class="h-32 w-full object-cover lg:h-48" :src="selected.cover_url.includes('unsplash') ? selected.cover_url+'&fit=crop&w=1920&h=1280&q=80' : selected.cover_url" alt="">
                </div>
              </template>
              <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
                <div class="-mt-12 sm:-mt-16 sm:flex sm:items-end sm:space-x-5">
                  <template x-if="!selected.avatar_url">
                    <span class="h-24 w-24 sm:h-32 sm:w-32 overflow-hidden rounded-full bg-gray-100 ring-4 ring-white">
                      <svg class="h-full w-full text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z"/>
                      </svg>
                    </span>
                  </template>
                  <template x-if="selected.avatar_url">

  <script>
    function dataDirectory() {
      return {

        users: [],
        selected: {},
        current: 'Profile',
        isFetching: false,
        numFriends: 0,
        search: '',
        query: '',

        showListing: true,
        showProfile: false,

        getBook(search) {
          const book = this
            .users
            .filter((u) => u.last_name.toLowerCase().includes(search.toLowerCase()) || u.first_name.toLowerCase().includes(search.toLowerCase()) || u.title.toLowerCase().includes(search.toLowerCase()))
            .map((o) => o = {
              ...o,
              key: o.last_name[0]
            })
            .reduce((hash, obj) => ({
              ...hash,
              [obj['key']]: (hash[obj['key']] || []).concat(obj)
            }), {})
          //this.selected = this.book['A'][0]
          return book
        },

        async init() {
          this.isFetching = true;
          this.users = (await(await fetch('/api/directory')).json())
            .data
            .filter(user => user.last_name !== null)
            .sort((a, b) => a.full_name.localeCompare(b.full_name))

          this.book = this
            .users
            .map((o) => o = {
              ...o,
              key: o.last_name[0]
            })
            .reduce((hash, obj) => ({
              ...hash,
              [obj['key']]: (hash[obj['key']] || []).concat(obj)
            }), {})
          this.selected = this.book['A'][0]
          /* this
            .users
            .find(
              (u) => u.email === Alpine.store('auth').user
              ?.email) */
          this.isFetching = false
        },
      }
    }
  </script>
